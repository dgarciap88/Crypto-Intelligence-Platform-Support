# IMPORTANT: This is an EXAMPLE file.
# DO NOT commit the actual secret.yaml with real credentials to version control.
#
# To create the actual secret:
# 1. Copy this file: cp secret.yaml.example secret.yaml
# 2. Replace the placeholder password with base64 encoded value:
#    echo -n 'your_secure_password' | base64
# 3. Apply: kubectl apply -f secret.yaml
# 4. Add secret.yaml to .gitignore

apiVersion: v1
kind: Secret
metadata:
  name: postgres-secret
  namespace: crypto-intel
  labels:
    app: postgres
    component: database
type: Opaque
data:
  # POSTGRES_PASSWORD in base64
  # Example: echo -n 'your_password' | base64
  POSTGRES_PASSWORD: Y2hhbmdlX3RoaXNfcGFzc3dvcmQ=  # CHANGE THIS!
