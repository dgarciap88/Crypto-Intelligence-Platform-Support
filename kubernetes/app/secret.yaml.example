  # Example: echo -n 'cip_user' | base64
  DB_USER: Y2lwX3VzZXI=  # CHANGE THIS!
  
  # Example: echo -n 'your_db_password' | base64
  DB_PASSWORD: Y2hhbmdlX3RoaXNfcGFzc3dvcmQ=  # CHANGE THIS!
  
  # OpenAI API Key (base64 encoded)
  # Example: echo -n 'sk-your-openai-key' | base64
  OPENAI_API_KEY: c2steW91ci1vcGVuYWkta2V5  # CHANGE THIS!
  
  # Optional: GitHub token for higher API limits
  # Example: echo -n 'ghp_your_token' | base64
